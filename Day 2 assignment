p15
#include<stdio.h>
int main()
{
float num;
printf("Enter the number:\n");
scanf("%f",&num);
printf("num1=%0.1f\n",num);
printf("num2=%0.2f\n",num);
printf("num3=%0.3f\n",num);
printf("num4=%0.4f\n",num);
printf("num5=%0.5f",num);
return 0;
}

p16
#include<stdio.h>
int main()
{
char ch;
printf("Enter the character:\n");
