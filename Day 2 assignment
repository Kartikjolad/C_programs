printf("Its ASCII value of %c is %d ",ch,ch);
return 0;
}

p17
#include <stdio.h>
int main()
{
int intValue = 12345;
float floatValue = 123.45678;
char stringValue[] = "Hello, World!";
// Length and Width
printf("Integer: %10d\n", intValue);
printf("Float: %10.2f\n", floatValue);
// Precision
printf("Float with precision: %.3f\n", floatValue);
// Left-align with width
printf("String left-aligned: %-20s\n", stringValue);
return 0;
}


p18
#include <stdio.h>
int main() 
{
unsigned int num;
printf("Enter a negative integer: ");
scanf("%d", &num);
// Print using various format specifiers
printf("As unsigned int: %u\n", num);
printf("As int: %d\n", num);
printf("As hexadecimal: %x\n", num);
printf("As octal: %o\n", num);
return 0;
}


p19
#include<stdio.h>
#include<stdlib.h>
int main ()
{
int num;
printf("\n Input a positive or negative number :");
scanf("%d",&num);
printf (" The absolute value of the given number is : %d\n",abs(num));
return 0;
}
